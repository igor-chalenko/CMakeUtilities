list(APPEND CMAKE_UTILITIES_CMAKE_MODULE_PATH "${CMAKE_UTILITIES_CMAKE_MODULE_DIR}")
list(APPEND CMAKE_MODULE_PATH "${CMAKE_UTILITIES_CMAKE_MODULE_PATH}")

# "New" IN_LIST syntax
cmake_policy(SET CMP0057 NEW)

include(${cmake_utilities_dir}/GlobalMap.cmake)
include(${cmake_utilities_dir}/Logging.cmake)
include(${cmake_utilities_dir}/Testing.cmake)
include(${cmake_utilities_dir}/WrapModule.cmake)